{
  "name": "mocha-test-debug-helper",
  "displayName": "Mocha Test Debug Helper",
  "description": "Debug mocha-style tests by toggling debug markers and auto commenting/uncommenting code on save.",
  "version": "0.4.0",
  "publisher": "narukami-dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/Raizan/mocha-test-debug-helper"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript"
  ],
  "main": "./out/src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mocha-debug-helper.toggleDebug",
        "title": "Mocha Debug Helper: Toggle Debug Marker"
      }
    ],
    "keybindings": [
      {
        "command": "mocha-debug-helper.toggleDebug",
        "key": "ctrl+shift+d",
        "mac": "ctrl+shift+d",
        "when": "editorTextFocus && editorLangId =~ /(javascript|typescript)/"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p .",
    "watch": "tsc -watch -p .",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.17.57",
    "@types/vscode": "^1.85.0",
    "@vscode/test-electron": "^2.5.2",
    "mocha": "^11.7.4",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "ts-morph": "^27.0.2"
  }
}