{
  "name": "mocha-test-debug-helper",
  "displayName": "Mocha Test Debug Helper",
  "description": "Debug mocha-style tests by toggling debug markers and auto commenting/uncommenting code on save.",
  "version": "0.4.2",
  "publisher": "narukami-dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/Raizan/mocha-test-debug-helper"
  },
  "icon": "resources/images/icon_minified.png",
  "license": "MIT",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript"
  ],
  "main": "./out/src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mocha-debug-helper.toggleDebug",
        "title": "Mocha Debug Helper: Toggle Debug Marker"
      }
    ],
    "keybindings": [
      {
        "command": "mocha-debug-helper.toggleDebug",
        "key": "ctrl+shift+d",
        "mac": "ctrl+shift+d",
        "when": "editorTextFocus && editorLangId =~ /(javascript|typescript)/"
      }
    ],
    "configuration": {
      "title": "Mocha Debug Helper",
      "properties": {
        "narukami-dev.mochaTestDebugHelper.protectedFunctions": {
          "type": "array",
          "default": [
            "describe",
            "before",
            "beforeEach",
            "test",
            "it",
            "after",
            "afterEach",
            "step"
          ],
          "items": {
            "type": "string"
          },
          "description": "Function names treated as protected callback scopes. Their call/header and closing lines are never commented/uncommented."
        },
        "narukami-dev.mochaTestDebugHelper.functionAllowlist": {
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          },
          "description": "Function names that keep var/let/const call-initializer declarations protected from comment/uncomment (supports identifier and member calls, e.g. findElementByText)."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p .",
    "watch": "tsc -watch -p .",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js",
    "build": "npm test && vsce package"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.17.57",
    "@types/vscode": "^1.85.0",
    "@vscode/test-electron": "^2.5.2",
    "mocha": "^11.7.4",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "ts-morph": "^27.0.2"
  }
}